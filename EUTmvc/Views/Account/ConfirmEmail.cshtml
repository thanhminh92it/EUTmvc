@model EUTmvc.Models.ConfirmEmailModel
@{
    ViewBag.Title = "Xác Nhận Tài Khoản";
}

<div>
    <div class="col-md-8 col-md-offset-2">
        <div class="page-header">
            <h4>
                <i class="glyphicon glyphicon-lock"></i>
                Xác Nhận Tài Khoản
            </h4>
        </div>
        <div id="form-olvidado" class="col-md-6 col-md-offset-3">
            <div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <fieldset>
                        @if (ViewBag.Message != null)
                        {
                            <div class="form-group">
                                <div class="alert alert-error">
                                    <a class="close" data-dismiss="alert" href="#">×</a>@Html.Raw(ViewBag.Message.ToString())
                                </div>
                            </div>
                        }

                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-lock"></i>
                                </span>
                                @Html.TextBoxFor(m => m.EmailCode, new { @class = "form-control", @placeholder = "Mã Xác Nhận Tài Khoản" })
                            </div>
                            <small>
                                @Html.ValidationMessageFor(m => m.EmailCode, null, new { @class = "help-block" })
                            </small>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">
                                Kích Hoạt
                            </button>
                        </div>
                    </fieldset>
                }
            </div>

        </div>
    </div>
</div>
