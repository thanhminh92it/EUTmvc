@model EUTmvc.Models.Admin.AdminNewsEditAction
@{
    Layout = "~/Views/Shared/Layout/_Admin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Trang chủ</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    @using (Html.BeginForm())
    {   
        @Html.AntiForgeryToken()
        <div class="panel panel-default">
            <div class="panel-heading">
                Quản lý tin tức
            </div>
            <!-- /.panel-heading -->
            @Html.HiddenFor(model=>model.Id)
            <div class="panel-body">
                <div class="form-group">
                    @Html.LabelFor(model => model.Title, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.News, new { @class = "control-label" })
                        @Html.TextAreaFor(model => model.News, new { @class = "form-control", @id = "ckeContent"})
                        @Html.ValidationMessageFor(model => model.News, "", new { @class = "text-danger" })
                        <script type="text/javascript">
                            var editor = CKEDITOR.replace("ckeContent");
                            CKFinder.setupCKEditor(editor, '@Url.Content("~/Scripts/ckfinder/")');
                            
                        </script>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Save" />
                    <button class="btn" type="reset" data-dismiss="modal">Reset</button>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
        <script>
            $(document).ready(function () {
                $('.thongtin').addClass('active');
                $('.ultt').addClass('in');
                $('.tintuc').addClass('active');
            });
        </script>
}