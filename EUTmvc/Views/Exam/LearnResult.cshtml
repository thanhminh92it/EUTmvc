@model EUTmvc.Models.Evaluation
@{
    ViewBag.Title = "Xem Lại Bài Thi";
}
<fieldset disabled>
    <div class="col-xs-12" style="text-align: center;">
        <h3>Môn : @Model.Subtests</h3>
        <h4>Chương: @Model.Category</h4>
    </div>
    <div class="col-xs-12">
        @for (int i = 0; i < Model.Questions.Count; i++)
        {
            <div class="form-group">
                <div class="question">
                    @*<span style="font-size: 20px">Câu @Model.Questions[i].TheNumber :</span>*@
                    @Html.Raw(Model.Questions[i].QuestionText)
                </div>
                <div class="answer">
                    @foreach (var a in Model.Questions[i].Answers)
                    {
                        if (Model.Questions[i].TrueAnswer.Equals(a.code) && !Model.Questions[i].TrueAnswer.Equals(Model.Questions[i].SelectedAnswer))
                        {
                        <div class="radio a-true">
                            <label>
                                @Html.RadioButtonFor(b => Model.Questions[i].SelectedAnswer, a.code)
                                @*@a.code . *@
                                @Html.Raw(a.AnswerText)
                            </label>
                        </div>
                        }
                        else
                        {
                        <div class="radio">
                            <label>
                                @Html.RadioButtonFor(b => Model.Questions[i].SelectedAnswer, a.code)
                                @*@a.code . *@
                                @Html.Raw(a.AnswerText)
                            </label>
                        </div>
                        }

                    }
                </div>
            </div>
        }
    </div>
</fieldset>
