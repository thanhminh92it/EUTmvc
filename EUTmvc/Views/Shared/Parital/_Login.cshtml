@model EUTmvc.Models.LoginModel
<div>
    @using (Html.BeginForm("Login", "Account"))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <fieldset>
            @if (ViewBag.Message != null)
            {
                <div class="form-group">
                    <div class="alert alert-error">
                        <a class="close" data-dismiss="alert" href="#">×</a>@Html.Raw(ViewBag.Message.ToString())
                    </div>
                </div>
            }

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-user"></i>
                    </span>
                    @Html.TextBoxFor(m => m.Account, new { @class = "form-control", @placeholder = "Tài Khoản" })
                </div>
                <small>
                    @Html.ValidationMessageFor(m => m.Account, null, new { @class = "help-block" })
                </small>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-lock"></i>
                    </span>
                    @Html.PasswordFor(m => m.PassWord, new { @class = "form-control", @placeholder = "Mật Khẩu" })
                </div>
                <small>
                    @Html.ValidationMessageFor(m => m.PassWord, null, new { @class = "help-block" })
                </small>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">
                    Đăng Nhập
                </button>
                <p class="help-block">
                    <small class="pull-right text-muted">
                        @Html.ActionLink("Quên Mật Khẩu", "ForgotPassword", "Account")
                    </small>
                </p>
            </div>
            <div class="form-group">
                <span>Bạn chưa có tài khoản?
                </span>
                <span style="font-size: 16px">
                    @Html.ActionLink("Đăng ký ngay", "Register", "Account")
                </span>
            </div>
        </fieldset>
    }
</div>
